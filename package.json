{    
    "repository": {
        "type": "git",
        "url": "https://github.com/FBJames/APostScriptRunner"
      },
    "publisher": "FunctionBay",
    "name": "apostscriptrunner",
    "displayName": "APostScriptRunner",
    "description": "C# Script file runner to Stand Alone Post",
    "version": "0.0.1",    
    "icon": "images/apostscriptrunner.png",
    "engines": {
        "vscode": "^1.35.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [        
        "onCommand:extension.RunScriptFile",        
        "onCommand:extension.InputInitializeCode"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.RunScriptFile",
                "title": "Run Script file to APost"
            },
            {
                "command": "extension.InputInitializeCode",
                "title": "Input Initialize code"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.InputInitializeCode",
                    "alt": "extension.SetInitializeToCSXFile",
                    "group": "APost Script"
                },
                {
                    "command": "extension.RunScriptFile",
                    "alt": "extension.RunScriptFile",
                    "group": "APost Script"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "APost Script Runner Configuration",
            "properties": {
                "APostScriptRunner.APostPath": {
                    "type": "string",
                    "default": "C:/Program Files/FunctionBay, Inc/Standalone Post V0R3",
                    "description": "Set Stand Alone Post installation folder"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.3.1",
        "vscode": "^1.1.28",
        "tslint": "^5.12.1",
        "@types/node": "^10.12.21",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        
    }    
}
